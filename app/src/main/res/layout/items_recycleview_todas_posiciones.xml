<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="3dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="6dp"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/background_dark"

        >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="5dp">

        <ImageView
            android:id="@+id/imagenUsuario_todas"
            android:layout_width="110dp"
            android:layout_height="100dp"

            app:srcCompat="@mipmap/motorsportnew"
            android:scaleType="fitCenter"/>

     <!--   <TextView
            android:id="@+id/txtNombre_todas"
            android:text="Nombre"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imagenUsuario_todas"
            android:layout_toRightOf="@+id/imagenUsuario_todas"
            android:layout_toEndOf="@+id/imagenUsuario_todas"
            android:textColor="@android:color/holo_red_dark"/>-->

        <TextView
            android:id="@+id/FechaHora_todas"
            android:text="FechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombre_todas"
            android:layout_toRightOf="@+id/imagenUsuario_todas"
            android:layout_toEndOf="@+id/imagenUsuario_todas"
            android:textColor="@android:color/white"
             />

        <TextView
            android:id="@+id/Longitud_todas"
            android:text="Longitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FechaHora_todas"
            android:layout_toRightOf="@+id/imagenUsuario_todas"
            android:layout_toEndOf="@+id/imagenUsuario_todas"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/Latitud_todas"
            android:text="Latitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Longitud_todas"
            android:layout_toRightOf="@+id/imagenUsuario_todas"
            android:layout_toEndOf="@+id/imagenUsuario_todas"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/Localizacion_todas"
            android:text="Localizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Latitud_todas"
            android:layout_toRightOf="@+id/imagenUsuario_todas"
            android:layout_toEndOf="@+id/imagenUsuario_todas"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/Velocidad_todas"
            android:text="Velocidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Localizacion_todas"
            android:layout_toRightOf="@+id/imagenUsuario_todas"
            android:layout_toEndOf="@+id/imagenUsuario_todas"
            android:textColor="@android:color/white"/>




    </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>